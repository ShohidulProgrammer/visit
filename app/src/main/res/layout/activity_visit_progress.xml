<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".VisitProgressActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewVisiteeCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="BEXIMCO GROUP"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtViewVisiteeCompanyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Beximco I/P, Sarabo, Kashimpur, Gazipur"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <View
            android:layout_width="368dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="4">

                <LinearLayout
                    android:id="@+id/visitProgressItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemVisitStatusTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtViewVisitProgressItemVisitStatusTitle"
                            style="@style/TextViewVisitProgressMilestone.LabelTitle"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemVisitingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Action/Visit Date" />

                        <TextView
                            android:id="@+id/txtViewVisitProgressItemVisitingDate"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="10:30am" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemStartedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Started At" />

                        <TextView
                            android:id="@+id/txtViewVisitProgressItemStartingTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="10:30am" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemStartedFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtViewVisitStartedFrom"
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Started From" />

                        <TextView
                            android:id="@+id/txtViewVisitProgressItemStartedFromText"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="Office" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemStartAfterAnotherVisit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Started After" />

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="Another Visit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemAdjournedTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Adjourned At" />

                        <TextView
                            android:id="@+id/txtViewAdjournedAt"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemAdjournedReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Adjourn Reason" />

                        <TextView
                            android:id="@+id/txtViewAdjournReason"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemAdjournInstructionFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Adjourn Instruction By" />

                        <TextView
                            android:id="@+id/txtViewAdjournInstructionBy"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemAdjournResumeDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Resume Date" />

                        <TextView
                            android:id="@+id/txtViewAdjournResumeDate"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemAdjournResumeTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Resume Date" />

                        <TextView
                            android:id="@+id/txtViewAdjournResumeTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemReachedCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Reached Customer Office At" />

                        <TextView
                            android:id="@+id/txtViewReachedAtCustomerTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemCancelledAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Cancelled At" />

                        <TextView
                            android:id="@+id/txtViewVisitCancelledTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemCancelledReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Cancel Reason" />

                        <TextView
                            android:id="@+id/txtViewVisitCancelledReason"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemRescheduledAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Rescheduled At" />

                        <TextView
                            android:id="@+id/txtViewVisitRescheduledTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemRescheduledReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Reschedule Reason" />

                        <TextView
                            android:id="@+id/txtViewVisitRescheduledReason"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemRescheduledDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="New Visiting Date" />

                        <TextView
                            android:id="@+id/txtViewVisitRescheduledVisitingDate"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemFinishedVisit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Finished Visit At" />

                        <TextView
                            android:id="@+id/txtViewVisitFinishedTime"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemFinishedVisitFeedbackNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Feedback Note" />

                        <TextView
                            android:id="@+id/txtViewVisitFinishedFeedbackNote"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerVisitProgressItemFinishedVisitStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextViewVisitProgressMilestone.Label"
                            android:text="Completion Status" />

                        <TextView
                            android:id="@+id/txtViewVisitFinishedStatus"
                            style="@style/TextViewVisitProgressMilestone.Value"
                            android:text="12:15pm" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnReachedCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:onClick="reachedCustomer"
                        android:text="Reached Customer Office"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnUpdateVisitStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:onClick="openVisitStatusDialog"
                        android:text="Finish Visit"
                        android:visibility="gone" />
                    <!--<Button-->
                    <!--android:id="@+id/btnUpdateVisitStatus"-->
                    <!--style="@style/ButtonStyle.Rounded"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:onClick="openVisitStatusDialog"-->
                    <!--android:text="Update Visit Status"-->
                    <!--android:visibility="gone" />-->


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/panelVisitProgressBottom0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnAdjournVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="openAdjournVisitDialog"
                        android:text="Adjourn Visit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelVisitProgressBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnCancelVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="openCancelVisitDialog"
                        android:text="Cancel Visit" />

                    <Button
                        android:id="@+id/btnRescheduleVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="openRescheduleVisitDialog"
                        android:text="Reschedule" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerVisitProgressItemResumeVisit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnResumeVisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="openConfirmDialog"
                        android:text="Resume" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>